<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Main activity action bar styles -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KnowledgeLevelRadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Label" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="LabelHeadline" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:layout_marginStart">@dimen/distance_medium</item>
        <item name="android:layout_marginLeft">@dimen/distance_medium</item>
        <item name="android:layout_marginEnd">@dimen/distance_medium</item>
        <item name="android:layout_marginRight">@dimen/distance_medium</item>
        <item name="android:layout_marginTop">@dimen/distance_medium</item>
        <item name="android:layout_marginBottom">@dimen/distance_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_large</item>
    </style>

    <style name="LabelStartTraining" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:layout_marginStart">@dimen/distance_medium</item>
        <item name="android:layout_marginLeft">@dimen/distance_medium</item>
        <item name="android:layout_marginEnd">@dimen/distance_medium</item>
        <item name="android:layout_marginRight">@dimen/distance_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpinnerStartTraining" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:layout_marginStart">@dimen/distance_medium</item>
        <item name="android:layout_marginLeft">@dimen/distance_medium</item>
        <item name="android:layout_marginEnd">@dimen/distance_medium</item>
        <item name="android:layout_marginRight">@dimen/distance_medium</item>
        <item name="android:layout_marginTop">@dimen/distance_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Switch" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/secondaryColor</item>
    </style>


</resources>
