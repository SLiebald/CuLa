<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/widget"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/tv_widget_last_learned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_small"
        android:contentDescription="@string/widget_description_last_learned"
        android:textSize="@dimen/textSize_small"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_widget_lesson_proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_small"
        android:contentDescription="@string/widget_description_worst_lesson"
        android:textSize="@dimen/textSize_small"
        android:textStyle="bold|italic" />

</LinearLayout>