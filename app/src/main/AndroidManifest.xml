<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.liebald.android.cula">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.updateLibrary.UpdateLibraryActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.updateLesson.UpdateLessonActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.training.TrainingActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <service
            android:exported="false"
            android:name=".services.UpdateQuoteJobService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>
    </application>

</manifest>